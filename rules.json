{
    "rules": {
        "authMap" : {
          ".read": true,
          ".write": true
          },
        "coverage" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "releases" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "articles" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "archives" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "magazines" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "feedback" : {
          ".read": "root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true",
          "$feedback_id" : {
            ".write": "!data.exists() || !newData.exists()"
            }
          },
        "users" : {
          ".read": true,
          ".write": "(!data.exists() && newData.exists()) || (auth != null && newData.hasChild(root.child('authMap').child(auth.uid).val())) || root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
          },
        "tournaments" : {
          ".read": true,
          "$tournament_id" : {
            ".write": "( auth != null && newData.hasChild('results') && (
              newData.child('results').child('open').hasChild(root.child('authMap').child(auth.uid).val()) ||
              newData.child('results').child('ladies').hasChild(root.child('authMap').child(auth.uid).val()) ||
              newData.child('results').child('senior').hasChild(root.child('authMap').child(auth.uid).val()) ||
              newData.child('results').child('trainee').hasChild(root.child('authMap').child(auth.uid).val()) )) ||
              auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true
              "
          }
        },
        "pages" : {
          ".read": true,
          ".write": "auth != null && root.child('users').child(root.child('authMap').child(auth.uid).val()).child('isAdmin').val() == true"
        }
    }
}
